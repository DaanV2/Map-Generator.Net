{
  "$schema": "http://json-schema.org/draft-07/schema",
  "additionalProperties": false,
  "required": ["outputfolder", "images", "labels"],
  "definitions": {
    "range": {
      "title": "Range",
      "description": "A range of values.",
      "oneOf": [
        { "type": "number" },
        {
          "type": "array",
          "items": [
            { "type": "number", "title": "Minimum" },
            { "type": "number", "title": "Maximum" }
          ]
        },
        {
          "type": "object",
          "additionalProperties": false,
          "properties": {
            "min": {
              "type": "number",
              "title": "Minimum"
            },
            "max": {
              "type": "number",
              "title": "Maximum"
            }
          }
        }
      ]
    },
    "point": {
      "title": "Point",
      "description": "A range of values.",
      "type": "array",
      "items": [
        { "type": "number", "title": "X" },
        { "type": "number", "title": "Y" }
      ]
    }
  },
  "properties": {
    "$schema": { "type": "string" },
    "outputtiles": {
      "type": "string",
      "title": "Output Tiles",
      "description": "The template path to go from x y z to a tilepath"
    },
    "images": {
      "type": "array",
      "title": "Images",
      "description": "The specification of a single image",
      "items": {
        "title": "Image",
        "description": "The specification of a single image",
        "additionalProperties": false,
        "required": ["filepath", "zoom_range", "area"],
        "properties": {
          "filepath": { 
            "title": "File Path",
            "description": "The path to the image file. can be relative",
            "type": "string"
          },
          "zoom_range": {
            "title": "Zoom Range",
            "description": "The range of zoom levels this image needs to be placed upon.",
            "$ref": "#/definitions/range" 
          },
          "area": {
            "title": "Area",
            "description": "Area this image occupies on zoom level 0",
            "items": [
              { "type": "number", "title": "X" },
              { "type": "number", "title": "Y" },
              { "type": "number", "title": "Width" },
              { "type": "number", "title": "Height" }
            ]
          }
        }
      }
    },
    "labels": {
      "type": "array",
      "title": "Labels",
      "items": {
        "title": "Label",
        "additionalProperties": false,
        "properties": {
          "text": { "type": "string", "title": "File Path" },
          "range": { "$ref": "#/definitions/range" },
          "point": { "$ref": "#/definitions/point" }
        }
      }
    }
  }
}
